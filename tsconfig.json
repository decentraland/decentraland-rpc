{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "declaration": true,
    "strictFunctionTypes": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2015",
      "es2015.promise",
      "webworker",
      "dom"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
